# PlotTwist Production Environment Variables for DigitalOcean
# This file overrides the development settings in docker-compose.fullstack.yml

# Database Configuration
POSTGRES_DB=plottwist
POSTGRES_USER=plottwist
POSTGRES_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=production
PYTHONPATH=/app

# API URLs (update with your domain or IP)
REACT_APP_API_URL=http://your-domain.com:8000/api/v1
# For IP-based access: REACT_APP_API_URL=http://YOUR_DROPLET_IP:8000/api/v1

# Node.js Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false
NODE_OPTIONS=--max_old_space_size=4096

# Disable development features
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
